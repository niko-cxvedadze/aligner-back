{
  "compilerOptions": {
    "strictNullChecks": true,
    "lib": ["es5", "es6"],
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"],
  "files": ["customs.d.ts"]
}
